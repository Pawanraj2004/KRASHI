<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Crop Monitoring Dashboard</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display&display=swap" rel="stylesheet">
    <script src="script/cm.js" defer></script>
    <%- include('head.ejs'); -%>
</head>

<body>
    <%- include('nav.ejs'); -%>

    <!-- Centered Container -->
    <div class="container d-flex justify-content-center align-items-center min-vh-100">
        <div class="text-center">
            <h1 class="display-6 fw-bold mb-5 mt-2" style="margin-top: 2 !important; padding-top: 0; font-family: 'Playwrite GB S', serif;color:brown !important">Crop Monitoring System</h1>
            
            <div class="row g-4 justify-content-center align-items-center p-4 shadow" style="background-color: #99d42285; border-radius: 10px;">
                <!-- Temperature Chart -->
                <div class="col-md-6">
                    <div class="card border-0 shadow-sm w-80 h-20">
                        <div class="card-body w-80">
                            <iframe src="https://thingspeak.com/channels/2650408/charts/1?bgcolor=%23ffffff&color=%23d62020&dynamic=true&results=60&title=Temperature&type=line"
                                    class="w-100 border-0 rounded" style="height: 250px;"></iframe>
                        </div>
                    </div>
                </div>

                <!-- Humidity Chart -->
                <div class="col-md-6">
                    <div class="card border-0 shadow-sm">
                        <div class="card-body">
                            <iframe src="https://thingspeak.com/channels/2650408/charts/2?bgcolor=%23ffffff&color=%23d62020&dynamic=true&results=60&title=Humidity&type=line"
                                    class="w-100 border-0 rounded" style="height: 250px;"></iframe>
                        </div>
                    </div>
                </div>

                <!-- Pressure Chart -->
                <div class="col-md-6">
                    <div class="card border-0 shadow-sm">
                        <div class="card-body">
                            <iframe src="https://thingspeak.com/channels/2650408/charts/3?bgcolor=%23ffffff&color=%23d62020&dynamic=true&results=60&title=Pressure&type=line"
                                    class="w-100 border-0 rounded" style="height: 250px;"></iframe>
                        </div>
                    </div>
                </div>

                <!-- Rain Level Chart -->
                <div class="col-md-6">
                    <div class="card border-0 shadow-sm">
                        <div class="card-body">
                            <iframe src="https://thingspeak.com/channels/2650408/charts/4?bgcolor=%23ffffff&color=%23d62020&dynamic=true&results=60&title=Rain+Level&type=line"
                                    class="w-100 border-0 rounded" style="height: 250px;"></iframe>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap Bundle with Popper.js -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
