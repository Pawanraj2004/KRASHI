<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Crop Recommendation System</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="output.css"> <!-- Additional custom CSS if needed -->
    <%- include('head.ejs'); -%>
</head>

<body>
    <%- include('nav.ejs'); -%>

    <!-- Main Form Container -->
    <div class=" container bg-white p-5 rounded shadow-lg mt-5" style="max-width: 600px;background-color:#99d42285 !important">
        <!-- Title Section -->
        <h1 class="text-center  mb-4 fw-bold display-6" style="font-family: 'Playwrite GB S', serif; color:brown !important">
            Crop Recommendation System
        </h1>

        <!-- Form Section -->
        <form id="crop-form">
            <!-- Zone Dropdown -->
            <div class=" mb-3">
                <label for="zone" class="form-label fw-semibold text-secondary">Select Zone:</label>
                <select id="zone" required class="form-select">
                    <option value="">--Select State--</option>
                    <option value="Jammu & Kashmir">Jammu & Kashmir</option>
                    <option value="Himachal Pradesh">Himachal Pradesh</option>
                    <option value="Uttarakhand">Uttarakhand</option>
                    <option value="Assam">Assam</option>
                    <option value="West Bengal">West Bengal</option>
                    <option value="Arunachal Pradesh">Arunachal Pradesh</option>
                    <option value="Sikkim">Sikkim</option>
                    <option value="Nagaland">Nagaland</option>
                    <option value="Manipur">Manipur</option>
                    <option value="Meghalaya">Meghalaya</option>
                    <option value="Uttar Pradesh">Uttar Pradesh</option>
                    <option value="Bihar">Bihar</option>
                    <option value="Maharashtra">Maharashtra</option>
                    <option value="Madhya Pradesh">Madhya Pradesh</option>
                    <option value="Chhattisgarh">Chhattisgarh</option>
                    <option value="Odisha">Odisha</option>
                    <option value="Jharkhand">Jharkhand</option>
                    <option value="Goa">Goa</option>
                    <option value="Kerala">Kerala</option>
                    <option value="Tamil Nadu">Tamil Nadu</option>
                    <option value="Andhra Pradesh">Andhra Pradesh</option>
                    <option value="Rajasthan">Rajasthan</option>
                    <option value="Gujarat">Gujarat</option>
                    <option value="Karnataka">Karnataka</option>
                </select>
            </div>

            <!-- Soil Type Dropdown -->
            <div class="mb-3">
                <label for="soil" class="form-label fw-semibold text-secondary">Select Soil Type:</label>
                <select id="soil" required class="form-select">
                    <option value="">--Select Soil Type--</option>
                    <option value="Red">Red</option>
                    <option value="Alluvial">Alluvial</option>
                    <option value="Lateritic">Lateritic</option>
                    <option value="Black">Black</option>
                    <option value="Desert">Desert</option>
                    <option value="Mountain">Mountain</option>
                    <option value="Sandy">Sandy</option>
                    <option value="Peaty">Peaty</option>
                    <option value="Loamy">Loamy</option>
                    <option value="Saline">Saline</option>
                </select>
            </div>

            <!-- Nitrogen Input -->
            <div class="mb-3">
                <label for="nitrogen" class="form-label fw-semibold text-secondary">Nitrogen (N) value:</label>
                <input type="number" id="nitrogen" name="nitrogen" required class="form-control" placeholder="Enter Nitrogen value">
            </div>

            <!-- Phosphorus Input -->
            <div class="mb-3">
                <label for="phosphorus" class="form-label fw-semibold text-secondary">Phosphorus (P) value:</label>
                <input type="number" id="phosphorus" name="phosphorus" required class="form-control" placeholder="Enter Phosphorus value">
            </div>

            <!-- Potassium Input -->
            <div class="mb-3">
                <label for="potassium" class="form-label fw-semibold text-secondary">Potassium (K) value:</label>
                <input type="number" id="potassium" name="potassium" required class="form-control" placeholder="Enter Potassium value">
            </div>

            <!-- Submit Button -->
            <button type="submit" class="btn  w-100 mt-3 " style="background-color: brown; color:white">
                Recommend Crop
            </button>
        </form>

        <!-- Result Section -->
        <div id="result" class="mt-4 text-center fs-5 fw-bold text-success"></div>
    </div>

    <!-- Optional Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="script/cr.js"></script>
</body>
</html>
